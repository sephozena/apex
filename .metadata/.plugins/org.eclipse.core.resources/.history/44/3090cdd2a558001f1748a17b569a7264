package apex.pages;

import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.How;

public class CheckoutPage {
	
	@FindBy(how = How.ID, using = "'firstNameInput")
	private WebElement inputFirstName;
	
	@FindBy(how = How.XPATH, using = "//input[@id='LastNameInput']")
	private WebElement inputLastName;

	@FindBy(how = How.XPATH, using = "//input[@id='addressLine1Input']")
	private WebElement inputAddress;
	
	@FindBy(how = How.XPATH, using = "//input[@id='provinceInput']")
	private WebElement inputProvince;
	
	@FindBy(how = How.XPATH, using = "//input[@id='postCodeInput']")
	private WebElement inputPostalCode;
	
	@FindBy(how = How.XPATH, using = "//button[@id='checkout-shipping-continue']")
	private WebElement btnSubmit;


}
