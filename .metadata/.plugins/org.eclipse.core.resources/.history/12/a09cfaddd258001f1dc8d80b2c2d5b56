package apex.basepage;

import org.apache.commons.lang3.StringUtils;
import apex.utils.PropertiesDataFile;
public final class TestData {
	  private static final String testDataFolder = System.getProperty("user.dir") + File.separator + "src" + File.separator + "main" + File.separator + "java" + File.separator + "data" + File.separator;
	  
	  public static void setDataFolder(String folderName) {
	    String dataFolder = testDataFolder;
	    String folder = StringUtils.isNotBlank(BaseClass.getParameter("dataFolder")) ? BaseClass.getParameter("dataFolder") : folderName;
	    String folder1 = folder.replace("//", File.separator).replace("\\", File.separator);
	    dataFolder = dataFolder + folder1 + File.separator;
	    ThreadUtils.setDataFolder(dataFolder);
	    BaseClass.log().info("DataFolder" + dataFolder);
	  }
}