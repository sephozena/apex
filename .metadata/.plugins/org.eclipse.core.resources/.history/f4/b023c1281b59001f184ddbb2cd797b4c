package apex.functions;

import org.openqa.selenium.WebDriver;

import apex.pages.CheckoutPage;
import apex.pages.CheckoutPage.CheckoutActions;
import apex.pages.MainPage;
import apex.pages.MainPage.MenuActions;

public class OrderManagement {
    private MainPage mainPage;
    private MenuActions menuActions;
    private CheckoutPage checkoutPage;
    private CheckoutActions checkoutActions;

    public OrderManagement(WebDriver driver) {
        this.mainPage = new MainPage(driver);
        this.checkoutPage = new CheckoutPage(driver);
        
        this.menuActions = mainPage.new MenuActions();
        this.checkoutActions = mainPage.new CheckoutActions();
    }

    public void addPhoneToCart() {
        menuActions.clickOffers();// Example action
        // Add further actions as needed
    }
}
