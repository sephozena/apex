package apex.functions;

import org.openqa.selenium.WebDriver;

import apex.pages.CheckoutPage;
import apex.pages.CheckoutPage.CheckoutActions;
import apex.pages.MainPage;
import apex.pages.MainPage.MenuActions;
import apex.pages.SignInPage;
import apex.utils.ConfigManager;

public class LoginManagement {
	private SignInPage signInPage;


    public LoginManagement(WebDriver driver) {
    	this.signInPage = new SignInPage(driver);
    	
    }
    
    public void signIn() {
        String username = ConfigManager.getProperty("username");
        String password = ConfigManager.getProperty("password");

        signInPage.signIn(username, password);
        signInPage.getBtnLogin().click();
    }


}
