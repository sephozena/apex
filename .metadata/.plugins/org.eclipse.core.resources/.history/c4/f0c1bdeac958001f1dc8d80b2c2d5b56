package apex.basepage;
import org.openqa.selenium.WebDriver;


public class BasePageObject<B extends  BasePageObject <B>> {
	 private WebDriver driver;
	  
	  // Constructor using the driver passed to it
	  public BasePageObject(WebDriver driver) {
	    this.driver = driver;
	  }
	  
	  // Get method for the driver
	  public WebDriver getDriver() {
	    return this.driver;
	  }

	  // Constructor using driver from thread-safe utility
	  public BasePageObject() {
	    this.driver = ThreadUtils.getDriverRef();
	  
}
	

